    url: "https://portal.azure.com/"
    interval: 5s
    group: Internet
    conditions:
      - "[STATUS] == 200"
  - name: www.amazon.com
    url: "https://www.amazon.com"
    interval: 5s
    group: Internet
    conditions:
      - "[STATUS] == 200"
